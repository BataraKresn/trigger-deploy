  <script>
    // Initialize charts
    document.addEventListener('DOMContentLoaded', function() {
      // Deployment Trends Chart
      const trendsCtx = document.getElementById('deploymentTrendsChart').getContext('2d');
      new Chart(trendsCtx, {
        type: 'line',
        data: {
          labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
          datasets: [{
            label: 'Successful Deployments',
            data: [45, 52, 48, 61],
            borderColor: '#10b981',
            backgroundColor: 'rgba(16, 185, 129, 0.1)',
            tension: 0.4
          }, {
            label: 'Failed Deployments',
            data: [3, 2, 4, 1],
            borderColor: '#ef4444',
            backgroundColor: 'rgba(239, 68, 68, 0.1)',
            tension: 0.4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom'
            }
          }
        }
      });

      // Success vs Failure Chart
      const successCtx = document.getElementById('successFailureChart').getContext('2d');
      new Chart(successCtx, {
        type: 'doughnut',
        data: {
          labels: ['Successful', 'Failed', 'Cancelled'],
          datasets: [{
            data: [1229, 18, 0],
            backgroundColor: ['#10b981', '#ef4444', '#f59e0b'],
            borderWidth: 0
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom'
            }
          }
        }
      });

      // Update timestamp
      function updateTimestamp() {
        document.getElementById('lastUpdated').textContent = new Date().toLocaleTimeString();
      }
      updateTimestamp();
      setInterval(updateTimestamp, 1000);
    });

    // User menu functionality
    document.getElementById('userMenuButton').addEventListener('click', function(e) {
      e.stopPropagation();
      const menu = document.getElementById('userMenu');
      menu.classList.toggle('hidden');
    });
    
    document.addEventListener('click', function() {
      document.getElementById('userMenu').classList.add('hidden');
    });
    
    // Logout functionality
    document.getElementById('logoutBtn').addEventListener('click', async function() {
      try {
        const response = await fetch('/api/auth/logout', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          credentials: 'same-origin'
        });

        if (response.ok) {
          window.location.href = '/login?message=Successfully logged out';
        } else {
          alert('Failed to logout. Please try again.');
        }
      } catch (error) {
        console.error('Logout error:', error);
        alert('Network error. Please try again.');
      }
    });

    // Refresh functionality
    document.getElementById('refreshBtn').addEventListener('click', function() {
      location.reload();
    });
  </script>
</body>
